<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    android:layout_margin="10dp"
    android:background="@color/cardview_shadow_end_color">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivprofile"
            android:layout_width="121dp"
            android:layout_height="140dp"
            android:layout_marginTop="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/prudence" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="174dp"
            android:layout_height="38dp"
            android:layout_marginTop="44dp"
            android:text="Ahimbisibwe Prudence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivprofile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="174dp"
            android:layout_height="38dp"
            android:text=" @prudence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivprofile"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <TextView
            android:id="@+id/tvtweet"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Life is what you make it.Believe in your self and trust the process. #motivation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivprofile"
            app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

        <ImageView
            android:id="@+id/ivcomment"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/tvnum1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivprofile"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/tvnum1"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:text="100"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/ivretweet"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivcomment"
            app:layout_constraintTop_toTopOf="@+id/ivcomment" />

        <ImageView
            android:id="@+id/ivretweet"
            android:layout_width="28dp"
            android:layout_height="34dp"
            app:layout_constraintEnd_toStartOf="@+id/tvnum2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvnum1"
            app:layout_constraintTop_toTopOf="@+id/tvnum1"
            app:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/tvnum2"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:text="20"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/ivlike"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivretweet"
            app:layout_constraintTop_toTopOf="@+id/ivretweet" />

        <ImageView
            android:id="@+id/ivlike"
            android:layout_width="28dp"
            android:layout_height="34dp"
            app:layout_constraintEnd_toStartOf="@+id/tvlike"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvnum2"
            app:layout_constraintTop_toTopOf="@+id/tvnum2"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/tvlike"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:text="70"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/ivshare"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivlike"
            app:layout_constraintTop_toTopOf="@+id/ivlike" />

        <ImageView
            android:id="@+id/ivshare"
            android:layout_width="28dp"
            android:layout_height="34dp"
            app:layout_constraintEnd_toStartOf="@+id/tvnum4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvlike"
            app:layout_constraintTop_toTopOf="@+id/tvlike"
            app:srcCompat="@drawable/img_3" />

        <TextView
            android:id="@+id/tvnum4"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:text="6"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivcomment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivshare"
            app:layout_constraintTop_toTopOf="@+id/ivshare" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
